{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "mau-lan",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#strings_single"
		},
		{
			"include": "#paren-expression"
		},
		{
			"include": "#todo-keyword"
		},
		{
			"include": "#ctrl-expressions"
		},
		{
			"include": "#reserved-words"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#numbers"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"begin": "//-",
					"name": "comment.line.mau-lang",
					"beginCaptures": {
						"0": {
							"name": "punctuation.definition.comment.mau-lang"
						}
					},
					"end": "\\n"
				}
			]
		},
		"reserved-words": {
			"patterns": [
				{
					"name": "entity.name.function.member.mau-lang",
					"match": "\\b(func|var)\\b"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.mau-lang",
					"match": "\\b(if|while|for|return|end|then)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.mau-lang",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.mau-lang",
					"match": "\\\\."
				}
			]
		},
		"strings_single": {
			"name": "string.quoted.single.mau-lang",
			"begin": "'",
			"end": "'",
			"patterns": [
				{
					"name": "constant.character.escape.mau-lang",
					"match": "\\\\."
				}
			]
		},
		"paren-expression": {
			"patterns": [
				{
					"captures": {
						"1": {
							"name": "entity.name.method.mau-lang"
						}
					},
					"match": "\\b(\\w+)(?:\\s+([-a-zA-Z0-9_]+))?\\s*(\\()",
					"name": "punctuation.definition.parameters.mau-lang"
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "keyword.other.unit.suffix.integer.mau-lang",
					"match": "(^-?[0-9][0-9\\.]+$)"
				}
			]
		},
		"todo-keyword": {
			"match": "TODO",
			"name": "keyword.todo"
		}
	},
	"scopeName": "source.mau"
}